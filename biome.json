{
  "$schema": "./node_modules/@biomejs/biome/configuration_schema.json",
  "organizeImports": {
    "enabled": true
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 120
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "single"
    },
    "parser": {
      "unsafeParameterDecoratorsEnabled": true
    }
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "a11y": {
        "noSvgWithoutTitle": "off"
      },
      "style": {
        "useNamingConvention": {
          "level": "error",
          "options": {
            "strictCase": false
          }
        },
        "noNonNullAssertion": "off"
      },
      "complexity": {
        "noBannedTypes": {
          "level": "off"
        },
        "noUselessConstructor": "off"
      },
      "correctness": {
        "useExhaustiveDependencies": "off",
        "noStringCaseMismatch": "error"
      }
    }
  }
}
